<% if (data.length > 0) { %>
    <% data.forEach(function(user) { %>
        <a href="/getMessages/<%= user._id %>" class='user'>
            <div class='flex gap-2 items-center hover:bg-sky-500 rounded p-2 py-1'>
                <div class='avatar <%= user.isOnline ? "online" : "offline" %>'>
                    <div class='w-12 rounded-full'>
                        <img src="<%= user.profilePic %>" alt="<%= user.fullname ? user.fullname + ' avatar' : 'User avatar' %>" />
                    </div>
                </div>
                <div class='flex flex-col flex-1'>
                    <div class='flex gap-3 justify-between'>
                        <p class='font-bold text-gray-200'><%= user.username %></p>
                        <span class='text-xl'><%= user.randomEmoji %></span>
                    </div>
                </div>
            </div>
            <div class='divider my-0 py-0 h-1'></div>
        </a>
    <% }); %>
<% } else { %>
    <p>No users available.</p>
<% } %>
